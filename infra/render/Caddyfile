{
    admin off
}

:80 {
    # On ne redirige PLUS vers HTTPS - Render s'en charge déjà
    root * /var/www/public
    encode zstd gzip

    # Connexion TCP vers PHP-FPM qui écoute sur le port 9000 par défaut
    php_fastcgi 127.0.0.1:9000

    # Entêtes de sécurité
    header {
        # Enable HTTP Strict Transport Security (HSTS)
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        # Prevent browsers from incorrectly detecting non-scripts as scripts
        X-Content-Type-Options "nosniff"
        # Disable frame embedding (clickjacking protection)
        X-Frame-Options "DENY"
        # Enable cross-site filter (XSS) protection in browsers
        X-XSS-Protection "1; mode=block"
        # Force HTTPS
        Content-Security-Policy "upgrade-insecure-requests;"
    }

    file_server
}
