{% extends 'base.html.twig' %}

{% block title %}Déconnexion{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Déconnexion</h1>
    <p>Cliquez sur le bouton ci-dessous pour vous déconnecter :</p>
    
    <form action="{{ path('logout') }}" method="GET" data-turbo="false">
        <button type="submit" class="btn btn-danger">Se déconnecter</button>
    </form>
    
    <p class="mt-3">
        <a href="{{ path('admin') }}">Retour à l'administration</a>
    </p>
</div>
{% endblock %}
